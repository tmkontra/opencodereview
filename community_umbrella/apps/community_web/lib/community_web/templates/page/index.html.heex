<div class="text-luckypoint text-white flex flex-row h-96 justify-around items-center">
  <div class="flex flex-col items-start justify-center h-full" id="hero-left">
    <h1 class="lg:text-6xl text-3xl">OpenCodeReview.net</h1>
    <h3 class="lg:text-xl text-md">Share your Pull Requests, get peer reviews.</h3>
  </div>
  <div class="flex flex-col justify-center items-center" id="hero-right">
    <%= link(to: Routes.oauth_path(@conn, :request, "github")) do %>
      <%= btn(:primary) do %>
        Continue with Github <i class="fa-brands fa-github"></i>
      <% end %>
    <% end %>
  </div>
</div>
